<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MeditationUI" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <!-- Primary brand color. -->
    <item name="MeditationUI" type="color">@color/deepblue</item>
    <item name="colorPrimaryVariant" type="color">@color/deepblue</item>
    <item name="colorOnPrimary" type="color">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary" type="color">@color/deepblue</item>
    <item name="colorSecondaryVariant" type="color">@color/deepblue</item>
    <item name="colorOnSecondary" type="color">@color/black</item>
    <!-- Status bar color. -->
    <item name="statusBarColor" type="color" tools:targetApi="l">attr/colorPrimaryVariant</item>

<style name="Theme.MeditationUI.NoActionBar">
<item name="android:windowActionBar">false</item>
<item name="android:windowNoTitle">true</item>
</style>

<style name="Theme.MeditationUI.AppBarOverlay" />

<style name="Theme.MeditationUI.PopupOverlay"/>
</resources>